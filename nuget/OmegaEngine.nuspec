<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
    <metadata>
        <id>OmegaEngine</id>
        <version>$version$$VersionSuffix$</version>
        <authors>Bastian Eicher</authors>
        <licenseUrl>https://github.com/omegaengine/omegaengine/wiki/License</licenseUrl>
        <projectUrl>http://omegaengine.de/</projectUrl>
        <iconUrl>http://omegaengine.de/images/icon_omega.png</iconUrl>
        <description>The OmegaEngine is a general-purpose 3D graphics engine written in C# using the .NET Framework 2.0 and DirectX 9 via SlimDX. The engine is designed to be light-weight, modular and gameplay-agnostic.
The complementary OmegaGUI, AlphaFramework and AlphaEditor help you build games using the OmegaEngine.</description>
        <summary>DirectX 9-based general-purpose 3D graphics engine</summary>
        <dependencies>
            <dependency id="OmegaEngine.Backend" version="[$version$$VersionSuffix$]" />
        </dependencies>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
    </metadata>
    <files>
        <!-- Content -->
        <file src="..\content\Graphics\**" target="content\content\Graphics" />
        <file src="..\content\GUI\Textures\**" target="content\content\GUI\Textures" />
        <file src="..\content\Meshes\Engine\**" target="content\content\Meshes\Engine" />
        <file src="..\content\Textures\Particles\**" target="content\content\Textures\Particles" />
        <file src="..\content\Textures\Shaders\**" target="content\content\Textures\Shaders" />
        <file src="..\content\Textures\Water\**" target="content\content\Textures\Water" />
        <file src="..\content\Textures\flag.png" target="content\content\Textures" />

        <!-- Compiled shaders -->
        <file src="..\artifacts\Release\Shaders\**" target="content\Shaders" />

        <!-- Install script -->
        <file src="install.ps1" target="tools" />
    </files>
</package>
